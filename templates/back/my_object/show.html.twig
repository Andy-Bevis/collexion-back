{% extends 'base.html.twig' %}

{% block title %}MyObject{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>MyObject</h1>

    <a href="{{ path('app_back_my_object_index') }}"class="btn btn-outline-primary float-end">back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ my_object.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ my_object.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ my_object.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ my_object.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ my_object.description }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ my_object.state }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ my_object.createdAt ? my_object.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ my_object.updatedAt ? my_object.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_my_object_edit', {'id': my_object.id}) }}"class="btn btn-warning">edit</a>

    {{ include('back/my_object/_delete_form.html.twig') }}
</div>
{% endblock %}
