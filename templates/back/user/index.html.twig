{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>User index</h1>
    <a href="{{ path('app_back_user_new') }}"class="btn btn-success float-end">Create new</a>

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nickname</th>
                <th>Description</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.description|slice(0, 30) }}...</td>
                <td>{{ user.image|slice(0, 30) }}...</td>
                <td>
                    <a href="{{ path('app_back_user_show', {'id': user.id}) }}"class="btn btn-sm btn-info">show</a>
                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}"class="btn btn-sm btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
