{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>User</h1>
    <a href="{{ path('app_back_user_index') }}"class="btn btn-outline-primary float-end">back to list</a>

    <table class="table table-hover mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}"class="btn btn-warning">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
