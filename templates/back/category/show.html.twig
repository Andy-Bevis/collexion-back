{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>Category</h1>

    <a href="{{ path('app_back_category_index') }}"class="btn btn-outline-primary float-end">back to list</a>

    <table class="table table-hover mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="http://localhost{{ category.image }}"></td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}"class="btn btn-warning">edit</a>

    {{ include('back/category/_delete_form.html.twig') }}
</div>
{% endblock %}
