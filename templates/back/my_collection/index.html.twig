{% extends 'base.html.twig' %}

{% block title %}MyCollection index{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>MyCollection index</h1>

    <a href="{{ path('app_back_my_collection_new') }}"class="btn btn-success float-end">Create new</a>

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Is_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for my_collection in my_collections %}
            <tr>
                <td>{{ my_collection.id }}</td>
                <td>{{ my_collection.name }}</td>
                <td>{{ my_collection.image }}</td>
                <td>{{ my_collection.description|slice(0, 50) }}... </td>
                <td>{{ my_collection.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_back_my_collection_show', {'id': my_collection.id}) }}"class="btn btn-sm btn-info">show</a>
                    <a href="{{ path('app_back_my_collection_edit', {'id': my_collection.id}) }}"class="btn btn-sm btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
